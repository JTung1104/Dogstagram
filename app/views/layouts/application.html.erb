<!DOCTYPE html>
<html>
<head>
  <title>Dogstagram</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <script src="//widget.cloudinary.com/global/all.js" type="text/javascript">
  </script>
    <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
  <link href='https://fonts.googleapis.com/css?family=Lobster+Two:400italic' rel='stylesheet' type='text/css'>
</head>
<body>

  <script>
    <% if signed_in? %>
      window.currentUserId = <%= current_user.id %>;
    <% else %>
      window.currentUserId = null;
    <% end %>
  </script>

  <script type="text/javascript">
    window.CLOUDINARY = {
      upload_preset: "<%=ENV['upload_preset']%>",
      cloud_name: "<%=ENV['cloud_name']%>",
      theme: 'white'
    };
  </script>

<%= flash[:errors].join("<br>").html_safe if flash[:errors] %>

<%= yield %>

</body>
</html>
