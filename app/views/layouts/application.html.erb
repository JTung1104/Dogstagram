<!DOCTYPE html>
<html>
<head>
  <title>Dogstagram</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>

  <link rel="shortcut icon"
        href="http://res.cloudinary.com/dsolojfgkabc/image/upload/c_scale,q_100,w_48/v1457077157/funny-dog-head_nb34ou.ico">
  <link href='https://fonts.googleapis.com/css?family=Lobster+Two:400italic|Montserrat' rel='stylesheet' type='text/css'>
</head>
<body>



<%= yield %>

<script>
  <% if signed_in? %>
    window.currentUserId = <%= current_user.id %>;
  <% else %>
    window.currentUserId = null;
  <% end %>
</script>

<script type="text/javascript">
window.CLOUDINARY = {
  upload_preset: "<%=ENV['upload_preset']%>",
  cloud_name: "<%=ENV['cloud_name']%>",
  theme: 'white'
};
</script>

<script async src="//widget.cloudinary.com/global/all.js" type="text/javascript"></script>

</body>
</html>
